<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/bestseller_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Bestseller List Name Here"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"/>

    <TextView
        android:id="@+id/latest_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Latest: 2018-01-01"
        app:layout_constraintTop_toBottomOf="@id/bestseller_list_name"
        app:layout_constraintStart_toStartOf="@id/bestseller_list_name"
        android:paddingBottom="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"/>

</android.support.constraint.ConstraintLayout>